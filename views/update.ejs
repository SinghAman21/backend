<!DOCTYPE html>
<html>
  <head>
    <title>Update User</title>
  </head>
  <body>
    <h1>Update User</h1>
    <form action="/update/<%= user._id %>" method="POST">
      <label for="username">Username:</label>
      <input
        type="text"
        name="username"
        value="<%= user.username %>"
        required
      /><br />
      <label for="email">Email:</label>
      <input
        type="email"
        name="email"
        value="<%= user.email %>"
        required
      /><br />
      <button type="submit">Update User</button>
    </form>
  </body>
</html>
